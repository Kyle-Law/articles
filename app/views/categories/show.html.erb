<h1><%= @category.name %></h1>
<div class="category-show-container">
  <% @category_articles.each do |article| %>
    <%= link_to article_path(article) do %>
      <%= image_tag(article.image.url || 'https://images.unsplash.com/photo-1597313852821-02cbd89b71ad?ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80')  %>
      <h2 ><%= truncate(article.title, length: 40) %></h2>
      <p><%= truncate(article.text, length: 300) %></p>
      <%= pluralize(article.votes.count, 'vote') %> 
    <% end %>
  <% end %>
</div>